{
  "name": "@cadhy/desktop",
  "version": "0.1.3",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun test",
    "tauri": "tauri",
    "tauri:dev": "bun run ../../scripts/core/run-cross.ts \"bun run --filter @cadhy/desktop tauri:dev:platform\"",
    "tauri:dev:platform": "tauri dev --config src-tauri/tauri.$TAURI_PLATFORM.conf.json",
    "tauri:dev:macos": "tauri dev --config src-tauri/tauri.macos.conf.json",
    "tauri:dev:windows": "tauri dev --config src-tauri/tauri.windows.conf.json",
    "tauri:dev:linux": "tauri dev --config src-tauri/tauri.linux.conf.json",
    "tauri:build": "bun run ../../scripts/core/run-cross.ts \"bun run --filter @cadhy/desktop tauri build\"",
    "tauri:build:macos": "tauri build --config src-tauri/tauri.macos.conf.json",
    "tauri:build:windows": "tauri build --config src-tauri/tauri.windows.conf.json",
    "tauri:build:linux": "tauri build --config src-tauri/tauri.linux.conf.json",
    "start": "bun run tauri:dev",
    "start:build": "bun run tauri:build"
  },
  "dependencies": {
    "@cadhy/ai": "workspace:*",
    "@cadhy/factory": "workspace:*",
    "@cadhy/shared": "workspace:*",
    "@cadhy/types": "workspace:*",
    "@cadhy/ui": "workspace:*",
    "@fontsource-variable/noto-sans": "^5.2.10",
    "@hugeicons/core-free-icons": "^3.0.0",
    "@hugeicons/react": "^1.1.3",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@react-three/postprocessing": "^3.0.4",
    "@tanstack/react-virtual": "^3.13.13",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "@types/three": "^0.182.0",
    "i18next": "^25.7.2",
    "motion": "^12.23.0",
    "nanoid": "^5.1.6",
    "postprocessing": "^6.38.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.6.0",
    "three": "^0.182.0",
    "three-mesh-bvh": "^0.9.4",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "happy-dom": "^20.0.11",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}
