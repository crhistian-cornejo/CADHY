{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CADHY - Hydraulic Analysis",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 500,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "shadow": true
      }
    ]
  },
  "bundle": {
    "targets": ["deb", "rpm", "appimage"],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      },
      "rpm": {
        "release": "1"
      }
    }
  }
}
