{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CADHY",
  "identifier": "com.cadhy.desktop",
  "mainBinaryName": "CADHY",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU2REM1OENFQjY0QzJDQkIKUldTN0xFeTJ6bGpjVmg1dksveHduTFlGRGZUTk5JRHdsZ2NtaEVnVnRaeFpoMUlQWDhSck9yangK",
      "endpoints": [
        "https://github.com/crhistian-cornejo/CADHY/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CADHY - Hydraulic Analysis",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "titleBarStyle": "overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "capabilities": ["main-capability"],
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https://api.anthropic.com https://*.anthropic.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app", "deb", "rpm", "appimage"],
    "createUpdaterArtifacts": true,
    "category": "DeveloperTool",
    "shortDescription": "Civil-Hydraulic Engineering Analysis Tool",
    "longDescription": "CADHY is a civil-hydraulic engineering application for analyzing open channel flow, water profiles, and hydraulic structures.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "macOS": {
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      }
    }
  }
}
