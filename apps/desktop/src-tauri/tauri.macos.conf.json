{
  "$schema": "../gen/schemas/desktop-schema.json",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CADHY",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 14,
          "y": 13
        }
      }
    ]
  },
  "bundle": {
    "targets": ["dmg", "app"],
    "resources": {},
    "fileAssociations": [
      {
        "ext": ["cadhy"],
        "name": "CADHY Project",
        "role": "Editor",
        "mimeType": "application/x-cadhy"
      }
    ],
    "macOS": {
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    }
  }
}
