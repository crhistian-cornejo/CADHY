{
  "$schema": "../gen/schemas/desktop-schema.json",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CADHY",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 14,
          "y": 13
        }
      }
    ]
  },
  "bundle": {
    "targets": ["dmg", "app"],
    "resources": {},
    "fileAssociations": [
      {
        "ext": ["cadhy"],
        "name": "CADHY Project",
        "role": "Editor",
        "mimeType": "application/x-cadhy"
      }
    ],
    "macOS": {
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist",
      "frameworks": [
        "./frameworks/libTKernel.dylib",
        "./frameworks/libTKMath.dylib",
        "./frameworks/libTKG2d.dylib",
        "./frameworks/libTKG3d.dylib",
        "./frameworks/libTKGeomBase.dylib",
        "./frameworks/libTKBRep.dylib",
        "./frameworks/libTKGeomAlgo.dylib",
        "./frameworks/libTKTopAlgo.dylib",
        "./frameworks/libTKPrim.dylib",
        "./frameworks/libTKBO.dylib",
        "./frameworks/libTKBool.dylib",
        "./frameworks/libTKFillet.dylib",
        "./frameworks/libTKShHealing.dylib",
        "./frameworks/libTKMesh.dylib",
        "./frameworks/libTKOffset.dylib",
        "./frameworks/libTKHLR.dylib",
        "./frameworks/libTKDE.dylib",
        "./frameworks/libTKXSBase.dylib",
        "./frameworks/libTKDESTEP.dylib",
        "./frameworks/libTKDEIGES.dylib",
        "./frameworks/libTKDEGLTF.dylib",
        "./frameworks/libTKDEOBJ.dylib",
        "./frameworks/libTKDESTL.dylib",
        "./frameworks/libTKDEPLY.dylib",
        "./frameworks/libTKDEVRML.dylib",
        "./frameworks/libTKRWMesh.dylib",
        "./frameworks/libTKCDF.dylib",
        "./frameworks/libTKLCAF.dylib",
        "./frameworks/libTKXCAF.dylib",
        "./frameworks/libTKCAF.dylib",
        "./frameworks/libTKService.dylib",
        "./frameworks/libTKV3d.dylib",
        "./frameworks/libTKVCAF.dylib",
        "./frameworks/libfreetype.6.dylib",
        "./frameworks/libtbb.12.dylib",
        "./frameworks/libtbbmalloc.2.dylib",
        "./frameworks/libpng16.16.dylib"
      ],
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    }
  }
}
